<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/df7gbyhfx/image/upload/v1674124195/volvr7w23vmov6y56awz.jpg);">
  <div class="container">
    <h1>Your personal movie watch list</h1>
    <p>Make a personal collection of your favorite movie, available everywhere you go.</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-8 py-5">
      <h1>My Lists</h1>
      <% @lists.each do |list| %>
      <div class="card mb-3">
        <% if list.photo.key? %>
          <%= cl_image_tag list.photo.key, crop: :fill %>
        <% end %>
        <div class="card-body">
          <%= link_to list.name, list_path(list) %>
        </div>
      </div>
      <% end %>
    </div>

    <div class="col-4 py-5">
      <h3>Add a new list</h3>
      <div class="card my-3">
        <div class="card-body">
          <%= render "form", list: @list %>
        </div>
      </div>

    </div>
  </div>
</div>
